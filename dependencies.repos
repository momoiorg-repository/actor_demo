repositories:

  # TurtleBot3 Repo
  # TODO: Remote once this PR is in the binary release:
  # https://github.com/ROBOTIS-GIT/turtlebot3/pull/916
  turtlebot3:
    type: git
    url: https://github.com/ROBOTIS-GIT/turtlebot3.git
    version: humble-devel

  # py_trees and related packages for Python based behavior trees.
  py_trees:
    type: git
    url: https://github.com/splintered-reality/py_trees.git
    version: devel
  py_trees_js:
    type: git
    url: https://github.com/splintered-reality/py_trees_js.git
    version: devel
  py_trees_ros:
    type: git
    url: https://github.com/splintered-reality/py_trees_ros.git
    version: devel
  py_trees_ros_interfaces:
    type: git
    url: https://github.com/splintered-reality/py_trees_ros_interfaces.git
    version: devel
  # NOTE: For now, using a personal fork to remove deprecation warnings:
  # https://github.com/splintered-reality/py_trees_ros_viewer/pull/34
  py_trees_ros_viewer:
    type: git
    url: https://github.com/sea-bass/py_trees_ros_viewer.git
    version: devel

  # other dependent libraries
  pymoveit2:
    type: git
    url: https://github.com/AndrejOrsula/pymoveit2.git
  gazebo-pkgs:
    type: git
    url: https://github.com/kongoncharuk/gazebo-pkgs
    version: humble
  pytwb:
    type: git
    url: https://github.com/momoiorg-repository/pytwb.git
  vector_map:
    type: git
    url: https://github.com/RobotSpatialCognition/vector_map.git
  ros_actor:
    type: git
    url: https://github.com/momoiorg-repository/ros_actor.git
